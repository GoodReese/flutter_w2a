<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tip_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/test_but_id"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:text="测试初始化"
        android:theme="@style/Theme.MyApplication"
        android:layout_width="120dp"
        android:layout_height="40dp"/>
    <Button
        android:id="@+id/test_but_id2"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/test_but_id"
        android:layout_marginTop="20dp"
        android:text="测试事件转发"
        android:theme="@style/Theme.MyApplication"
        android:layout_width="120dp"
        android:layout_height="40dp"/>
    <Button
        android:id="@+id/test_but_id7"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/test_but_id2"
        android:layout_marginTop="20dp"
        android:text="刷新"
        android:theme="@style/Theme.MyApplication"
        android:layout_width="120dp"
        android:layout_height="40dp"/>
    <Button
        android:id="@+id/test_but_id3"
        android:layout_below="@+id/test_but_id2"
        android:layout_marginTop="20dp"
        android:text="测试更新数据"
        android:theme="@style/Theme.MyApplication"
        android:layout_marginLeft="30dp"
        android:layout_width="120dp"
        android:layout_height="40dp"/>
    <Button
        android:id="@+id/test_but_id4"
        android:layout_below="@+id/test_but_id2"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/test_but_id3"
        android:text="测试购买"
        android:theme="@style/Theme.MyApplication"
        android:layout_marginLeft="30dp"
        android:layout_width="120dp"
        android:layout_height="40dp"/>
    <Button
        android:id="@+id/test_but_id6"
        android:layout_below="@+id/test_but_id4"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/test_but_id5"
        android:text="新更新数据"
        android:theme="@style/Theme.MyApplication"
        android:layout_marginLeft="30dp"
        android:layout_width="120dp"
        android:layout_height="40dp"/>
    <Button
        android:id="@+id/test_but_id5"
        android:layout_below="@+id/test_but_id4"
        android:layout_marginTop="20dp"
        android:text="测试落地页读取数据"
        android:theme="@style/Theme.MyApplication"
        android:layout_marginLeft="30dp"
        android:layout_width="120dp"
        android:layout_height="40dp"/>
    <ScrollView
        android:id="@+id/form_id"
        android:layout_below="@+id/test_but_id5"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:layout_width="match_parent"
        android:layout_height="400dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/em_id"
                android:hint="邮箱地址"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/phone_id"
                android:hint="手机号"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/zp_id"
                android:hint="邮编"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/city_id"
                android:hint="城市"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/state_id"
                android:hint="州省市"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/country_id"
                android:hint="国家"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/ge_id"
                android:hint="性别"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/db_id"
                android:hint="生日"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/fn_id"
                android:hint="名字"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/ln_id"
                android:hint="姓氏"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/currency_id"
                android:hint="币种符号"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/cost_id"
                android:hint="金额"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/eventname_id"
                android:hint="事件名称"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/ids_id"
                android:hint="id列表，用逗号隔开"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
<!--    <RelativeLayout-->
<!--        android:id="@+id/form_id"-->
<!--        android:layout_below="@+id/test_but_id5"-->

<!--        android:layout_marginTop="20dp"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content">-->
<!--        -->
<!--    </RelativeLayout>-->
    <TextView
        android:id="@+id/show_zone"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/form_id"
        android:gravity="center_horizontal|left"
        android:inputType="textMultiLine"
        android:lineSpacingExtra="3dp"
        android:lineSpacingMultiplier="1.5"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:text="显示内容"
        />



</RelativeLayout>